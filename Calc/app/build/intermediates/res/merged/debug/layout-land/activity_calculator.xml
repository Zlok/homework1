<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:weightSum="8"
    android:baselineAligned="false">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:id="@+id/result"
        android:layout_weight="3"
        android:gravity="center_vertical|left"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:visibility="visible"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="50sp"
        android:maxLength="20"
        android:text="@string/Number0"
        android:textAlignment="viewStart" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:weightSum="4" >

        <Button
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:id="@+id/d7"
            android:width="1dp"
            android:layout_weight="1"
            android:text="@string/Number7"
            android:layout_margin="0dp"
            android:textSize="35sp"
            android:background="@color/colorOrange"
            android:onClick="click" />

        <Button
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:id="@+id/d8"
            android:width="1dp"
            android:layout_weight="1"
            android:text="@string/Number8"
            android:textSize="35sp"
            android:background="@color/colorOrange"
            android:onClick="click" />

        <Button
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:id="@+id/d9"
            android:width="1dp"
            android:layout_weight="1"
            android:text="@string/Number9"
            android:textSize="35sp"
            android:background="@color/colorOrange"
            android:onClick="click" />

        <Button
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:id="@+id/div"
            android:width="1dp"
            android:layout_weight="1"
            android:text="@string/Op_div"
            android:textSize="35sp"
            android:background="@color/colorGreen"
            android:onClick="click" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:weightSum="4" >

        <Button
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:id="@+id/d4"
            android:width="1dp"
            android:layout_weight="1"
            android:text="@string/Number4"
            android:layout_margin="0dp"
            android:textSize="35sp"
            android:background="@color/colorOrange"
            android:onClick="click" />

        <Button
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:id="@+id/d5"
            android:width="1dp"
            android:layout_weight="1"
            android:text="@string/Number5"
            android:textSize="35sp"
            android:background="@color/colorOrange"
            android:onClick="click" />

        <Button
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:id="@+id/d6"
            android:width="1dp"
            android:layout_weight="1"
            android:text="@string/Number6"
            android:textSize="35sp"
            android:background="@color/colorOrange"
            android:onClick="click" />

        <Button
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:id="@+id/mul"
            android:width="1dp"
            android:layout_weight="1"
            android:text="@string/Op_mul"
            android:textSize="35sp"
            android:background="@color/colorGreen"
            android:onClick="click" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:weightSum="4" >

        <Button
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:id="@+id/d1"
            android:width="1dp"
            android:layout_weight="1"
            android:text="@string/Number1"
            android:layout_margin="0dp"
            android:textSize="35sp"
            android:background="@color/colorOrange"
            android:onClick="click" />

        <Button
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:id="@+id/d2"
            android:width="1dp"
            android:layout_weight="1"
            android:text="@string/Number2"
            android:textSize="35sp"
            android:background="@color/colorOrange"
            android:onClick="click" />

        <Button
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:id="@+id/d3"
            android:width="1dp"
            android:layout_weight="1"
            android:text="@string/Number3"
            android:textSize="35sp"
            android:background="@color/colorOrange"
            android:onClick="click" />

        <Button
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:id="@+id/sub"
            android:width="1dp"
            android:layout_weight="1"
            android:text="@string/Op_sub"
            android:textSize="35sp"
            android:background="@color/colorGreen"
            android:onClick="click" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:weightSum="4" >

        <Button
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:id="@+id/point"
            android:width="1dp"
            android:layout_weight="1"
            android:text="@string/point"
            android:layout_margin="0dp"
            android:textSize="35sp"
            android:background="@color/colorYellow"
            android:onClick="click" />

        <Button
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:id="@+id/d0"
            android:width="1dp"
            android:layout_weight="1"
            android:text="@string/Number0"
            android:textSize="35sp"
            android:background="@color/colorOrange"
            android:onClick="click" />

        <Button
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:id="@+id/eqv"
            android:width="1dp"
            android:layout_weight="1"
            android:text="@string/Op_equal"
            android:textSize="35sp"
            android:background="@color/colorYellow"
            android:onClick="eqvClick" />

        <Button
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:id="@+id/add"
            android:width="1dp"
            android:layout_weight="1"
            android:text="@string/Op_add"
            android:textSize="35sp"
            android:background="@color/colorGreen"
            android:onClick="click" />

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:weightSum="1" >

        <Button
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:id="@+id/clear"
            android:width="1dp"
            android:layout_weight="1"
            android:text="@string/C"
            android:textSize="35sp"
            android:background="@color/colorDarkGreen"
            android:onClick="clearClick" />
    </LinearLayout>
</LinearLayout>